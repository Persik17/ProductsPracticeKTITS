<Page x:Class="grid.Pages.EditCostProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:grid.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditCostProducts">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Цена"/>
            <TextBox x:Name="CostTextBox" Width="200" HorizontalAlignment="Left" Background="#CEFFF9"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Click="SaveBtn_Click"/>
                <Button x:Name="BackBtn" Content="Назад" Margin="5" Click="BackBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
